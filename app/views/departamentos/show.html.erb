<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">


<div class="container mt-4">
  <h1 class="mb-4">Departamento: <%= @departamento.nome %></h1>
  
  <div class="card mb-4">
    <div class="card-body">
      <p class="card-text">
        <strong>Descrição:</strong>
        <%= @departamento.descricao %>
      </p>

      <p class="card-text">
        <strong>Código:</strong>
        <%= @departamento.codigo %>
      </p>

      <p class="card-text">
        <strong>Localização:</strong>
        <%= @departamento.localizacao %>
      </p>

      <p class="card-text">
        <strong>Status:</strong>
        <%= @departamento.status %>
      </p>
    </div>
  </div>

  <div class="d-flex justify-content-between">
    <div>
      <%= link_to 'Editar', edit_departamento_path(@departamento), class: "btn btn-primary" %>
      <%= link_to 'Voltar', departamentos_path, class: "btn btn-secondary" %>
    </div>
    <div>
      <%= button_to "Apagar", @departamento, method: :delete, class: "btn btn-danger" %>
    </div>
  </div>
</div>
