<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">


<div class="container mt-4">
  <%= simple_form_for(@departamento, html: { class: "form-horizontal" }) do |f| %>

    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-group row">
      <%= f.label :nome, "Nome do Departamento", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.input :nome, label: false, input_html: { class: "form-control" } %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :descricao, "Descrição", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.input :descricao, label: false, input_html: { class: "form-control" } %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :codigo, "Código do Departamento", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.input :codigo, label: false, input_html: { class: "form-control" } %>
      </div>
    </div>

  
    <div class="form-group row">
      <%= f.label :localizacao, "Localização", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.input :localizacao, label: false, input_html: { class: "form-control" } %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :status, "Status do Departamento", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.input :status, collection: ['Ativo', 'Inativo'], include_blank: false, label: false, input_html: { class: "form-control" } %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-10 offset-sm-2">
        <%= f.button :submit, "Salvar Departamento", class: "btn btn-primary" %>
      </div>
    </div>

  
    <div class="d-flex justify-content-between">
      <div>
        <%= link_to "Exibir", @departamento, class: "btn btn-primary" %> 
        <%= link_to "Voltar", departamentos_path, class: "btn btn-secondary" %>
      </div>
    </div>
  <% end %>

</div>


