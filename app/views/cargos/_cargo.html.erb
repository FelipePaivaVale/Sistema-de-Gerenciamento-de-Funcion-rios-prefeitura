<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">


<div id="<%= dom_id(cargo) %>" class="container mt-4">
  <div class="card">
    <div class="card-header bg-primary text-white">
      <h4 class="mb-0"><%= cargo.nome %></h4>
    </div>
    <div class="card-body">
      <p class="mb-2">
        <strong>Descrição:</strong> <%= cargo.descricao %>
      </p>

      <p class="mb-2">
        <strong>Departamento:</strong> <%= cargo.departamento.nome %>
      </p>

      <p class="mb-2">
        <strong>Nível:</strong> <%= cargo.nivel %>
      </p>

      <p class="mb-2">
        <strong>Salário Base:</strong> <%= number_to_currency(cargo.salario_base, unit: "R$", separator: ",", delimiter: ".") %>
      </p>

      <p class="mb-2">
        <strong>Requisitos:</strong> <%= cargo.requisitos %>
      </p>

      <p class="mb-2">
        <strong>Benefícios:</strong> <%= cargo.beneficios %>
      </p>

      <p class="mb-2">
        <strong>Status:</strong> <%= cargo.status %>
      </p>
    </div>
    <div class="card-footer">
      <div class="d-flex justify-content-between">
          <%= link_to "Editar", edit_cargo_path(@cargo), class: "btn btn-primary" %>
          <%= link_to "Voltar", cargos_path, class: "btn btn-secondary" %>
          <%= button_to "Apagar", @cargo, method: :delete, class: "btn btn-danger" %>
        </div>
    </div>
  </div>
</div>
