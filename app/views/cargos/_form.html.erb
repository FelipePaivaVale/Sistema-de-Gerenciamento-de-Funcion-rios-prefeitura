<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">



<div class="container mt-5">
  <%= simple_form_for @cargo, html: { class: 'form-horizontal' } do |form| %>
    <div class="form-group">
      <%= form.input :nome, label: "Nome do Cargo", input_html: { class: "form-control" } %>
    </div>

    <div class="form-group">
      <%= form.input :descricao, label: "Descrição", as: :text, input_html: { class: "form-control", rows: 3 } %>
    </div>

    <div class="form-group">
      <%= form.input :departamento_id, label: "Departamento", as: :select, 
                      collection: Departamento.all.collect { |d| [d.nome, d.id] }, 
                      prompt: "Selecione um Departamento", input_html: { class: "form-control" } %>
    </div>

    <div class="form-group">
      <%= form.input :nivel, label: "Nível do Cargo", 
                      collection: ["Júnior", "Pleno", "Sênior", "Não se aplica"], 
                      prompt: "Selecione o Nível", input_html: { class: "form-control" } %>
    </div>

    <div class="form-group">
      <%= form.input :salario_base, label: "Salário Base", as: :decimal, step: 0.01, 
                      input_html: { class: "form-control" } %>
    </div>

    <div class="form-group">
      <%= form.input :requisitos, label: "Requisitos", as: :text, 
                      input_html: { class: "form-control", rows: 3 } %>
    </div>

    <div class="form-group">
      <%= form.input :beneficios, label: "Benefícios", as: :text, 
                      input_html: { class: "form-control", rows: 3 } %>
    </div>

    <div class="form-group">
      <%= form.input :status, label: "Status do Cargo", 
                      collection: ["Ativo", "Inativo"], 
                      prompt: "Selecione o Status", input_html: { class: "form-control" } %>
    </div>

    <div class="form-group text-center mt-4">
      <%= form.button :submit, "Salvar Cargo", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
