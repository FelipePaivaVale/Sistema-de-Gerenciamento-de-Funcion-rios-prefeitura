<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
<div class="layout-container">
  <div class="sidebar">
    <div class="shortcuts">
      <%= link_to 'Funcionários', funcionarios_path, class: 'btn btn-outline-primary' %>
      <%= link_to 'Cargos', cargos_path, class: 'btn btn-outline-primary' %>
      <%= link_to 'Departamentos', departamentos_path, class: 'btn btn-outline-primary' %>
      <% if user_signed_in? && current_user.admin? %>
        <%= link_to 'Registrar Novo Usuário', new_admin_user_path, class: 'btn btn-outline-primary' %>
      <% end %>
      <%= link_to "Novo funcionario", new_funcionario_path, class: 'btn btn-outline-primary' %>
    </div>

    <% if user_signed_in? %>
      <%= button_to 'Sair', destroy_user_session_path, method: :delete, data: { confirm: 'Are you sure you want to log out?' }, class: 'btn btn-danger' %>
    <% end %>
  </div>


  <div class="row-md-2 w-100 h-100 content d-flex align-itens-center text-center">
    <h2>Criar Novo Usuário</h2>

    <div class="row-md-2 mt-5 content d-flex align-itens-center">
      
      <%= simple_form_for @user, url: create_admin_user_path do |f| %>
        <%= f.input :name, label: "Nome Completo" %>
        <%= f.input :email, label: "E-mail" %>
        <%= f.input :password, label: "Senha" %>
        <%= f.input :password_confirmation, label: "Confirme a Senha" %>
        <%= f.input :role, label: "Nível de Acesso", collection: ["admin", "gestor de RH"], prompt: "Selecione o Nível de Acesso" %>
        <%= f.input :departamento_id, as: :check_boxes, collection: Departamento.all.collect { |d| [d.nome, d.id] } , label: "Departamentos" %>

        <%= f.button :submit, "Criar Usuário", class: "btn btn-primary" %>
        

      <% end %>
    </div>
  </div>
</div>