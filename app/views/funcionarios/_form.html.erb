<%= simple_form_for @funcionario, html: { class: 'container mt-4' } do |f| %>

<div class="row">
  <div class="col-md-12">
    <h1><%= @funcionario.new_record? ? 'Novo Funcionário' : 'Editar Funcionário' %></h1>
  </div>
</div>

<div class="row g-3">
  <div class="col-md-3">
    <%= f.input :nome, input_html: { class: "form-control", id: "Nome" }, label: "Nome" %>
  </div>

  <div class="col-md-3">
    <%= f.input :nascimento, as: :date, input_html: { id: "DatadeNascimento", class: "form-control" }, label: "Data de Nascimento", start_year: Date.today.year - 100, end_year: Date.today.year %>
  </div>

  <div class="col-md-3">
    <%= f.input :genero, as: :select, collection: ["Masculino", "Feminino", "Outro"], prompt: "Selecione o Gênero", input_html: { id: "inputState" }, label: "Gênero" %>
  </div>
</div>

<div class="row g-3">
  <div class="col-md-2">
    <%= f.input :cpf, input_html: { class: "form-control", id: "Cpf", maxlength: 11 }, label: "CPF" %>
  </div>

  <div class="col-md-2">
    <%= f.input :rg, input_html: { class: "form-control", id: "RG", maxlength: 9 }, label: "RG" %>
  </div>
</div>

<div class="row g-3">
  <div class="col-md-3">
    <%= f.input :rua, input_html: { class: "form-control", id: "Rua" }, label: "Rua" %>
  </div>

  <div class="col-md-1">
    <%= f.input :numero, input_html: { class: "form-control", id: "Numero" }, label: "Número" %>
  </div>

  <div class="col-md-3">
    <%= f.input :complemento, input_html: { class: "form-control", id: "Complemento" }, label: "Complemento" %>
  </div>

  <div class="col-md-3">
    <%= f.input :bairro, input_html: { class: "form-control", id: "Bairro" }, label: "Bairro" %>
  </div>
</div>

<div class="row g-3">
  <div class="col-md-2">
    <%= f.input :cidade, input_html: { class: "form-control", id: "Cidade" }, label: "Cidade" %>
  </div>

  <div class="col-md-2">
    <%= f.input :estado, input_html: { class: "form-control", id: "Estado" }, label: "Estado" %>
  </div>

  <div class="col-md-3">
    <%= f.input :cep, input_html: { class: "form-control", id: "CEP", maxlength: 8 }, label: "CEP" %>
  </div>
</div>

<div class="row g-3">
  <div class="col-md-2">
    <%= f.input :telefone, input_html: { class: "form-control", id: "Telefone" }, label: "Telefone" %>
  </div>

  <div class="col-md-4">
    <%= f.input :email, input_html: { class: "form-control", id: "Email" }, label: "Email" %>
  </div>

  <div class="col-md-4">
    <%= f.input :departamento_id, as: :select, collection: Departamento.all.collect { |d| [d.nome, d.id] }, prompt: "Selecione um Departamento", input_html: { class: "form-control", id: "Departamento" }, label: "Departamento" %>
  </div>

  <div class="col-md-4">
    <%= f.input :cargo_id, as: :select, collection: Cargo.all.collect { |c| [c.nome, c.id] }, prompt: "Selecione um Cargo", input_html: { class: "form-control", id: "Cargo" }, label: "Cargo" %>
  </div>

  <div class="col-md-4">
    <%= f.input :contratação, as: :date, input_html: { id: "DataContratação", class: "form-control" }, label: "Data de Contratação", start_year: Date.today.year - 100, end_year: Date.today.year %>
  </div>

  <div class="col-md-3">
    <%= f.input :salario, as: :decimal, step: 0.01, input_html: { class: "form-control", id: "Salário" }, label: "Salário" %>
  </div>

  <div class="col-md-4">
    <%= f.input :status, as: :select, collection: ["Ativo", "Inativo", "Em licença"], prompt: "Selecione o Status", input_html: { class: "form-control", id: "Status" }, label: "Status" %>
  </div>
</div>

<div class="d-flex mt-4 text-center">
  <%= f.button :submit, "Salvar Funcionário", class: "btn btn-primary" %>
  <%= link_to "Voltar", funcionarios_path, class: "btn btn-secondary ml-2" %>
</div>

<% end %>
