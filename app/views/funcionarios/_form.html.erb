<%= simple_form_for @funcionario, html: { local: true } do |f| %>
  <div class="field">
    <%= f.input :nome, label: "Nome Completo" %>
  </div>

  <div class="field">
    <%= f.input :nascimento, label: "Data de Nascimento", as: :date, start_year: 1900, end_year: Date.today.year %>
  </div>

  <div class="field">
    <%= f.input :genero, label: "Gênero", collection: ["Masculino", "Feminino", "Outro"], prompt: "Selecione o Gênero" %>
  </div>

  <div class="field">
    <%= f.input :cpf, label: "CPF" %>
  </div>

  <div class="field">
    <%= f.input :rg, label: "RG" %>
  </div>

  <div class="field">
    <%= f.input :rua, label: "Rua" %>
  </div>

  <div class="field">
    <%= f.input :numero, label: "Número" %>
  </div>

  <div class="field">
    <%= f.input :complemento, label: "Complemento" %>
  </div>

  <div class="field">
    <%= f.input :bairro, label: "Bairro" %>
  </div>

  <div class="field">
    <%= f.input :cidade, label: "Cidade" %>
  </div>

  <div class="field">
    <%= f.input :estado, label: "Estado" %>
  </div>

  <div class="field">
    <%= f.input :cep, label: "CEP" %>
  </div>

  <div class="field">
    <%= f.input :telefone, label: "Telefone" %>
  </div>

  <div class="field">
    <%= f.input :email, label: "E-mail", as: :email %>
  </div>

  <div class="field">
    <%= f.input :departamento_id, label: "Departamento", as: :select, collection: Departamento.all.collect { |d| [d.nome, d.id] }, prompt: "Selecione um Departamento" %>
  </div>

  <div class="field">
    <%= f.input :cargo_id, label: "Cargo", as: :select, collection: Cargo.all.collect { |c| [c.nome, c.id] }, prompt: "Selecione um Cargo" %>
  </div>

  <div class="field">
    <%= f.input :contratação, label: "Data de Contratação", as: :date, start_year: 1900, end_year: Date.today.year %>
  </div>

  <div class="field">
    <%= f.input :salario, label: "Salário", as: :decimal, step: 0.01 %>
  </div>

  <div class="field">
    <%= f.input :status, label: "Status", collection: ["Ativo", "Inativo", "Em licença"], prompt: "Selecione o Status" %>
  </div>

  <div class="actions">
    <%= f.button :submit, "Salvar Funcionário" %>
  </div>
<% end %>
