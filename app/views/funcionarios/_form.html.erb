<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

<%= simple_form_for @funcionario, html: { local: true } do |f| %>

  <form class="col-m3-3">
    <div class="row g-3">
      <div class="col-md-3">
        <label for="Nome" class="form-label">Nome</label>
        <%= f.input :nome, input_html: { class: "form-control", id: "Nome" }, label: false %>
      </div>

      <div class="col-md-2">
        <label for="DatadeNascimento" class="form-label">Data de Nascimento</label>
        <%= f.input :nascimento, input_html: { class: "form-control", id: "DatadeNascimento" }, label: false, as: :date, start_year: Date.today.year, end_year: 2000 %>
      </div>

      <div class="col-md-4">
        <label for="genero" class="form-label">Gênero</label>
        <%= f.input :genero, label: false, collection: ["Masculino", "Feminino", "Outro"], prompt: "Selecione o Gênero", input_html: { id: "inputState" } %>
      </div>
    </div>

    <div>
      <div class="col-md-2">
        <label for="Cpf" class="form-label">CPF</label>
        <%= f.input :cpf, input_html: { class: "form-control", id: "Cpf" }, label: false %>
      </div>
      
      <div class="col-md-2">
        <label for="RG" class="form-label">RG</label>
        <%= f.input :rg, input_html: { class: "form-control", id: "RG" }, label: false %>
      </div>
    </div>

    <div>
      <div class="col-md-3">
          <label for="Rua" class="form-label">Rua</label>
          <%= f.input :rua, input_html: { class: "form-control", id: "Rua" }, label: false %>
      </div>

      <div class="col-md-1">
          <label for="Numero" class="form-label">Número</label> 
          <%= f.input :numero,input_html: { class: "form-control", id: "Numero" }, label: false %>
      </div>

      <div class="col-md-3">
          <label for="Complemento" class="form-label">Complemento</label>
          <%= f.input :complemento, input_html: { class: "form-control", id: "COMPLEMENTO" }, label: false %>
      </div>

      <div class="col-md-3">
          <label for="Bairro" class="form-label">Bairro</label>
          <%= f.input :bairro, input_html: { class: "form-control", id: "Bairro" }, label: false %>
      </div>
    </fdiv>

    <div>
      <div class="col-md-4">
          <label for="Cidade" class="form-label">Cidade</label>
          <%= f.input :cidade, input_html: { class: "form-control", id: "Cidade" }, label: false %>
      </div>

      <div class="col-md-4">
          <label for="inputEmail4" class="form-label">Estado</label>
          <%= f.input :estado, input_html: { class: "form-control", id: "Estado" }, label: false %>
      </div>
      
      <div class="col-md-3">
          <label for="CEP" class="form-label">CEP</label>
          <%= f.input :cep, input_html: { class: "form-control", id: "CEP" }, label: false  %>
      </div>
    </div>

    <div>
      <div class="col-md-2">
          <label for="telefone" class="form-label">Telefone</label>
          <%= f.input :telefone, input_html: { class: "form-control", id: "Telefone" }, label: false  %>
      </div>
      
      <div class="col-md-4">
          <label for="inputEmail4" class="form-label">Email</label>
          <%= f.input :email, input_html: { class: "form-control", id: "Telefone" }, label: false  %>
      </div>
      
      <div class="col-md-4">
        <label for="Departamento" class="form-label">DEPARTAMENTO</label>
        <%= f.input :departamento_id, input_html: { class: "form-control", id: "Departamento" }, label: false, as: :select, collection: Departamento.all.collect { |d| [d.nome, d.id] }, prompt: "Selecione um Departamento" %>
      </div>

      <div class="col-md-4">
        <label for="Cargo" class="form-label">CARGO</label>
        <%= f.input :cargo_id, input_html: { class: "form-control", id: "Cargo" }, label: false, as: :select, collection: Cargo.all.collect { |c| [c.nome, c.id] }, prompt: "Selecione um Cargo" %>
      </div>

      <div class="col-md-4">
        <label for="Data de Contratação" class="form-label">DATA DE CONTRATACAO</label>
        <%= f.input :contratação, input_html: { class: "form-control", id: "Data de Contratação" }, label: false, as: :date, start_year: 1900, end_year: Date.today.year %>
      </div>

      <div class="col-md-4">
        <label for="Salário" class="form-label">Salario</label>
        <%= f.input :salario, input_html: { class: "form-control", id: "Salário" }, label: false, as: :decimal, step: 0.01 %>
      </div>

      <div class="col-md-4">
        <label for="Status" class="form-label">Status</label>
        <%= f.input :status, input_html: { class: "form-control", id: "Status" }, label: false, collection: ["Ativo", "Inativo", "Em licença"], prompt: "Selecione o Status" %>
      </div>


      <div class="col-12">
        <%= f.button :submit, "Salvar Funcionário", input_html: {class: "btn btn-primary"} %>
      </div>
    </div>
  </form>
<% end %>
