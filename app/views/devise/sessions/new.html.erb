<h2>Gerenciamento de RH</h2>

<div class="login-container">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'login-form' }) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email" } %>
      <%= f.input :password, required: false, input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      <%= render "devise/shared/links" %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Entrar" %>

    </div>
  <% end %>
 
</div>
